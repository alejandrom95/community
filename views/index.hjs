	<div class = "container text-center">
		<header id="heading">
			<img src="images/default.jpg" class="img-circle" alt="Default profile" width="304" height="236">
			<h2>User Name</h2>
		</header>
	</div>
	<div class="container-fluid">
		<div class="well"><h2>Events</h2></div>
		<div class="row">
		    <!-- might have to change this to col-*-* -->
			<div class="col-sm-4" sytle="background-color:lavender;">
				<h4>Your Events</h4>
				  <table class="table table-bordered">
					<thead>
					  <tr>
						<th>Event</th>
						<th>Date</th>
						<th>Location</th>
					  </tr>
					</thead>
					<tbody>
						{{#owner_events}}
					  <tr>
						<td><a href="/o_event/{{event_id}}">{{event_name}}</a></td>
						<td>{{date_time}}</td>
						<td>{{location}}</td>
					  </tr>
					  	{{/owner_events}}
					</tbody>
				  </table>
				  <h4>Volunteering Events</h4>
				  <table class="table table-bordered">
					<thead>
					  <tr>
						<th>Event</th>
						<th>Date</th>
						<th>Location</th>
					  </tr>
					</thead>
					<tbody>
						{{#volunteer_events}}
					  <tr>
						<td><a href="/event/{{event_id}}">{{event_name}}</a></td>
						<td>{{date_time}}</td>
						<td>{{location}}</td>
					  </tr>
					  	{{/volunteer_events}}
					</tbody>
				  </table>
				<!-- <button type="button" class="btn btn-default">More Events</button> -->
			</div><!--end of span 4 -->
			<div class ="col-sm-8" style = "background-color:white;">
				<h4>Local Events {{zipcode}}</h4>

				<table class="table table-hover">
					<thead>
					  <tr>
						<th>Event</th>
						<th>Date</th>
						<th>Location</th>
						<!-- <th>Zipcode</th> -->
						<th>Request to Join</th>
					  </tr>
					</thead>
					<tbody>
					  {{#events}}
					  <tr>
						<td><a href="/event/{{event_id}}">{{event_name}}</a></td>
						<td>{{date_time}}</td>
						<td>{{location}}</td>
						<!-- <td>{{zipcode}}</td> -->
						<form action="/request_to_join_event" method="post" id="join_event_form_{{event_id}}">
						<input type="hidden" name="event_id" value="{{ event_id }}"/>
						</form>
						<td><button type="submit" class="btn btn-default" form="join_event_form_{{event_id}}">Volunteer</button></td>
					  </tr>
					  {{/events}}

					</tbody>
				  </table><!-- end of table -->
				<!-- <ul class="pager">
					<li><a href="#">Previous</a></li>
					<li><a href="#">Next</a></li>
				</ul> -->
			</div><!--end of span 4-->
		</div><!-- end or row -->
	</div><!--end of container div-->

