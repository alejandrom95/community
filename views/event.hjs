      </ul>

        </div> <!--/.nav-collapse -->
      </nav>
    </div> <!--/.container-fluid -->


  	

<div class="container-fluid event-page">
	<div class="row">
    	<div class="col-md-7">
    		<div class="eTitle">
				<h1>{{event_name}}</h1>
				<h2>Posted By: {{owner_email}}</h2>
				<!-- <br> -->
        <h3>Volunteer Status: {{volunteer_status}}</h3>
        <div>
          <form action="/request_to_join_event" method="post" style="float: left;">
            <div>
              <input type="hidden" name="event_id" value="{{ event_id }}"/>
            </div>
            <div>
              <button type="submit" class="btn btn-join"  style="margin: 2pt;">Volunteer</button>
            </div>
          </form>
          <form action="/cancel_volunteer_request" method="post"  style="float: left;">
            <div>
              <input type="hidden" name="event_id" value="{{ event_id }}"/>
            </div>
            <div>
              <button type="submit" class="btn btn-join" style="margin: 2pt;">Cancel Volunteer Request</button>
            </div>
          </form>
          <form action="/message" method="post">
            <div>
              <input type="hidden" name="sendee_email" value="{{ owner_email }}"/>
            </div>
            <div>
              <input type="hidden" name="event_id" value="{{ event_id }}"/>
            </div>
            <div>
              <button type="submit" class="btn btn-join" style="margin: 2pt;">Send Message</button>
            </div>
          </form>
          <!-- my edits-->
          <!-- <form action="/message" method = "POST">
            <div>
              <input type="hidden" value = "{{owner_email}}" name="owner_email">
              <input type="submit" value = "Submit">
            <!--            <button><a href="/message">Message Event Owner</a></button> - ->
            </div>
          </form> -->
				<!-- <br> -->
				<p><br> {{description}} <br> <br></p>
			</div> <!--/ eTitle -->
			<div class="where">
				<h1>Where & When</h1>
				<p>
					{{location}} {{zipcode}}
					<br>On {{date_time}}
				</p>
			</div>  <!--/ where -->
      </div>
			</div>  <!--/ col-md-7 -->
		
			<div class="col-md-5"><img class="img-responsive center-block" src="/images/globe.png" alt="Globe"> </div>
    </div> <!--/ row -->
</div> <!--/ container -->


<div class="container-fluid">
  <footer class="footer">
        <p>&copy; 2016 Company, Inc.</p>
      </footer>
</div>


  </body>
</html>
