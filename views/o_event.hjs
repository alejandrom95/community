<div class="container">

<div class="container-fluid event-page">
	<div class="row">
    	<div class="col-md-7">
    		<div class="eTitle">
				<h1>{{event_name}}</h1>
				<h2>Posted By: {{owner_email}}</h2>
				<h3>Status: {{status}}</h3>
				<div>
					<form action="/open_event" method="post" style="float: left;">
					  <div>
					    <input type="hidden" name="event_id" value="{{event_id}}"/>
					  </div>
					  <div>
					    <input type="hidden" name="status" value="1"/>
					  </div>
					  <div>
					    <button type="submit" class="btn btn-join" style="margin: 2pt;">Open Event</button>
					  </div>
					</form>
					<form action="/close_event" method="post" style="float: left;">
					  <div>
					    <input type="hidden" name="event_id" value="{{event_id}}"/>
					  </div>
					  <div>
					    <input type="hidden" name="status" value="2"/>
					  </div>
					  <div>
					    <button type="submit" class="btn btn-join"  style="margin: 2pt;">Close Event</button>
					  </div>
					</form>
					<form action="/cancel_event" method="post"  style="float: left;">
					  <div>
					    <input type="hidden" name="event_id" value="{{event_id}}"/>
					  </div>
					  <div>
					    <input type="hidden" name="status" value="3"/>
					  </div>
					  <div>
					    <button type="submit" class="btn btn-join" style="margin: 2pt;">Cancel Event</button>
					  </div>
					</form>
					<form action="/finish_event" method="post">
					  <div>
					    <input type="hidden" name="event_id" value="{{event_id}}"/>
					  </div>
					  <div>
					    <input type="hidden" name="status" value="4"/>
					  </div>
					  <div>
					    <button type="submit" class="btn btn-join" style="margin: 2pt;">Finish Event</button>
					  </div>
					</form>
				</div>
				
				<!-- <br> -->
				<p><br> {{description}} <br> <br></p>
			</div> <!--/ eTitle -->
			<div class="where">
				<h1>Where & When</h1>
				<p>
					{{location}} {{zipcode}}
					<br>On {{date_time}}
				</p>
			</div>  <!--/ where -->
			</div>  <!--/ col-md-7 -->
		
			<div class="col-md-5"><img class="img-responsive center-block" src="/images/globe.png" alt="Globe"></div>
    </div> <!--/ row -->
</div> <!--/ container -->
</div>
